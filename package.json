{
  "name": "react-javascript-to-typescript-transform-vscode",
  "displayName": "React JavaScript to TypeScript Transformer for VSCode",
  "description": "Convert your React code from JavaScript to TypeScript automatically.",
  "version": "0.0.1",
  "publisher": "mohsen1",
  "engines": {
    "vscode": "^1.12.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.convertReactToTypeScript"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.convertReactToTypeScript",
        "title": "Convert React to TypeScript"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/fs-extra": "^3.0.2",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "fs-extra": "^3.0.1",
    "react-js-to-ts": "^1.0.0-alpha-3"
  }
}
