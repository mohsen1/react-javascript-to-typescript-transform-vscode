{
  "name": "react-javascript-to-typescript-transform-vscode",
  "displayName": "React JavaScript to TypeScript Transformer for VSCode",
  "description": "Convert your React code from JavaScript to TypeScript automatically.",
  "version": "1.8.0",
  "icon": "icon.png",
  "publisher": "mohsen1",
  "repository": {
    "type": "git",
    "url": "git@github.com:mohsen1/react-javascript-to-typescript-transform-vscode"
  },
  "engines": {
    "vscode": "^1.12.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.convertReactToTypeScript"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.convertReactToTypeScript",
        "title": "Convert React to TypeScript"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/fs-extra": "^3.0.2",
    "@types/mocha": "^2.2.32",
    "@types/node": "^8.0.13",
    "mocha": "^3.4.2",
    "typescript": "^2.4.1",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "fs-extra": "^4.0.0",
    "react-js-to-ts": "^1.2.0"
  }
}
